%h2 Register

= form_for(resource, :as => resource_name, :url => user_registration_path(@user)) do |f|
  = devise_error_messages!
  %p
    = f.label :email
    = f.email_field :email
  %p
    = f.submit 'Signup'
  %br/
  = render :partial => 'devise/links'


:javascript
  $(document).ready(function() {
    $("div#div_warning").dialog({autoOpen:false,dialogClass:'dialog_class', buttons: [{text: "Ok",click: function() { $(this).dialog("close"); } }] })
    $("a#a_warning").show();
    $("div#div_warning").hide();

    $("a#a_warning").click(function (event) {
      event.preventDefault();
      $("div#div_warning").dialog('open');
    });    

  });    

%a#a_warning.hidden(href="#")Warning!

