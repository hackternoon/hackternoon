!!! 5
%html
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title Hackternoon.com
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    #div4_top_logo.row.background_color_white
      .twelve.columns
        %a(href="#{sslhost}/")
          %img(src="/assets/logo.png" alt="hackternoon.com")
    #div4row2.row
      #div4_lhs.two.columns.background_color_ddd
        %ul
          = render 'shared/registration_items'
          = render 'shared/login_items'
          %li
            = link_to('Projects',sslhost + projects_path)

          - if current_user.present?
            %li
              = link_to('New Project', sslhost + new_project_path)

          %li
            Meetup:
            %br/
            %a(href="http://Meetup.com/Hackternoon" target="m")
              %span Hackternoon
          %li
            Events:
            %br/
            %a(href="http://Meetup.com/Hackternoon/events/calendar/" target="m")
              %span Hackternoon

          %li Links above are important, links below less so.

          %li
            %a(href="#{sslhost}/blog")Blog

          %li
            %a(href="#{sslhost}/tech_tips")Technical Tips

          %li
            Twitter:
            %br/
            %a(href="https://Twitter.com/Hackternoon" target="t")
              Hackternoon

          %li
            Github:
            %br/
            %a(href="https://www.Github.com/Hackternoon" target="h")
              Hackternoon
          %li
            LinkedIn:
            %br/
            %a(href="http://www.linkedin.com/groups/Hackternoon-4347714" target="i")
              Hackternoon

          %li
            Facebook:
            %br/
            %a(href="https://www.Facebook.com/Hackternoon" target="f")
              Hackternoon

          %li
            Google+:
            %br/
            %a(href="https://plus.google.com/105181318549199426173" target="p")
              Hackternoon

          %li
            Google Site Search:
            %form(action="https://www.google.com/" target="o")
              %input(type="text" name="as_sitesearch" value="hackternoon.herokuapp.com" size="13")
              %input(type="text" name="q" size="13")
              %input(type="submit" value="Search")

          %li
            %a(href="#{sslhost}/")About

          %li
            %a(href="#{sslhost}/terms")Terms

          %li
            %a(href="#{sslhost}/contact")Contact

          %li
            %a(href="#{sslhost}/ux_info")UX-Info

      #div4_rhs.nine.columns
        %p.notice
          = notice
        %p.alert
          = alert
        = yield
    .row
      #div4_footer.eleven.columns.round_corner15px.background_color_ccc
        %a#a_htn(href="#{sslhost}/") Hackternoon
        2012
    .row
      .eleven.columns
        %br/
